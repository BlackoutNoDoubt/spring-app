<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <context:component-scan base-package="com.blackout.spring"/>

    <bean id="musicBeanOne"
          class="com.blackout.spring.ClassicalMusic"
          init-method="init"
          destroy-method="destroy"
          factory-method="getClassicalMusic">
    </bean>

        <bean id="musicBeanTwo"
              class="com.blackout.spring.AlternativeRockMusic">
        </bean>

    <bean id="musicBeanThree"
          class="com.blackout.spring.IndieMusic">
    </bean>

    <bean id="musicPlayer"
          class="com.blackout.spring.MusicPlayer"
          scope="prototype">
        <property name="music" ref="musicBeanOne"/>

        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>

        <property name="musicList">
            <list>
                <ref bean="musicBeanOne"/>
                <ref bean="musicBeanTwo"/>
                <ref bean="musicBeanThree"/>
            </list>
        </property>

    </bean>

</beans>